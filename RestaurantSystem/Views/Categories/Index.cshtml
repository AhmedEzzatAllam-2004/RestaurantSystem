@model IEnumerable<RestaurantSystem.Models.Category>

@{
    ViewData["Title"] = "Menu Categories";
}

<style>
    body {
        background-color: #fff;
    }

    .category-card {
        background: linear-gradient(135deg, #fdfbfb 0%, #ebedee 100%);
        border-radius: 12px;
        padding: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: 0.2s;
        border: 1px solid #eee;
    }

        .category-card:hover {
            background: white;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            border-color: #ddd;
            transform: scale(1.02);
        }

    .cat-icon {
        width: 50px;
        height: 50px;
        background: #e0c3fc;
        color: #8ec5fc;
        background: linear-gradient(120deg, #e0c3fc 0%, #8ec5fc 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        color: white;
    }
</style>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1 class="fw-bold"><i class="fas fa-tags text-info me-2"></i>Food Categories</h1>
        <a asp-action="Create" class="btn btn-info text-white rounded-pill px-4 shadow-sm">
            <i class="fas fa-plus me-2"></i> New Category
        </a>
    </div>

    <div class="row g-3">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-sm-6">
                <div class="category-card">
                    <div class="d-flex align-items-center">
                        <div class="cat-icon me-3">
                            <i class="fas fa-utensils"></i>
                        </div>
                        <h5 class="fw-bold mb-0 text-secondary">@item.Name</h5>
                    </div>

                    <div class="dropdown">
                        <button class="btn btn-sm btn-light rounded-circle" type="button" data-bs-toggle="dropdown">
                            <i class="fas fa-ellipsis-v"></i>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a></li>
                            <li><a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
</div>