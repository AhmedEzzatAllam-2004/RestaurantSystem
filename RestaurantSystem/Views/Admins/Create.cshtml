@model RestaurantSystem.Models.Admin

@{
    ViewData["Title"] = "Add Admin";
}

<style>
    body {
        background-color: #f0f2f5;
    }

    .form-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        border: none;
        overflow: hidden;
    }

    .form-header {
        background: #2c3e50; /* رصاصي غامق */
        padding: 25px;
        color: white;
        text-align: center;
    }

    .form-floating > label {
        left: 10px;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card form-card">
                <div class="form-header">
                    <h3 class="fw-bold mb-0"><i class="fas fa-user-shield me-2"></i>New Admin</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Username" class="form-control rounded-pill px-4" placeholder="Username" />
                            <label asp-for="Username" class="px-4"><i class="fas fa-user me-2 text-dark"></i>Username</label>
                            <span asp-validation-for="Username" class="text-danger small ms-3"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Password" class="form-control rounded-pill px-4" placeholder="Password" type="password" />
                            <label asp-for="Password" class="px-4"><i class="fas fa-key me-2 text-dark"></i>Password</label>
                            <span asp-validation-for="Password" class="text-danger small ms-3"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-dark rounded-pill py-2 fw-bold shadow-sm">
                                <i class="fas fa-check me-2"></i> Grant Access
                            </button>
                            <a asp-action="Index" class="btn btn-outline-dark rounded-pill py-2">Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
 }