@model IEnumerable<RestaurantSystem.Models.Cuisine>

@{
    ViewData["Title"] = "Cuisines";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1 class="fw-bold"><i class="fas fa-globe-americas text-warning me-2"></i>World Cuisines</h1>
        <a asp-action="Create" class="btn btn-warning rounded-pill px-4 shadow-sm">
            <i class="fas fa-plus me-2"></i> Add Cuisine
        </a>
    </div>

    <div class="row g-3">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4 col-6">
                <div class="card border-0 shadow-sm h-100 text-center p-4 rounded-4" style="background: #fff8e1;">
                    <div class="mb-3">
                        <i class="fas fa-flag fa-2x text-warning"></i>
                    </div>
                    <h5 class="fw-bold">@item.Name</h5>

                    <div class="mt-3 d-flex justify-content-center gap-2">
                        <a asp-action="Edit" asp-route-id="@item.CuisineId" class="btn btn-sm btn-outline-dark rounded-circle"><i class="fas fa-pen"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.CuisineId" class="btn btn-sm btn-outline-danger rounded-circle"><i class="fas fa-trash"></i></a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>