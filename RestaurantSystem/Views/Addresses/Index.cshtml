@model IEnumerable<RestaurantSystem.Models.Address>

@{
    ViewData["Title"] = "Customer Addresses";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .address-card {
        background: white;
        border: 1px solid #e0e0e0;
        border-radius: 10px;
        padding: 20px;
        position: relative;
        transition: 0.3s;
        border-top: 4px solid #ff6b6b; /* لون مميز من فوق */
    }

        .address-card:hover {
            box-shadow: 0 10px 20px rgba(0,0,0,0.08);
            transform: translateY(-5px);
        }

    .icon-box {
        position: absolute;
        top: 20px;
        right: 20px;
        color: #e0e0e0;
        font-size: 2rem;
    }
</style>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1 class="fw-bold"><i class="fas fa-map-marked text-danger me-2"></i>Address Book</h1>
        <a asp-action="Create" class="btn btn-danger rounded-pill px-4 shadow-sm">
            <i class="fas fa-plus me-2"></i> Add Address
        </a>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-sm-6">
                <div class="address-card h-100">
                    <i class="fas fa-envelope-open-text icon-box"></i>

                    <h6 class="text-uppercase text-muted small fw-bold mb-3">Customer Address</h6>

                    <h5 class="fw-bold text-dark mb-1">@item.Street</h5>
                    <p class="text-primary mb-3">@item.City</p>

                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-user-circle text-secondary me-2"></i>
                        <span class="small">@(item.Customer?.Name ?? "Unknown Customer")</span>
                    </div>

                    @if (!string.IsNullOrEmpty(item.Notes))
                    {
                        <div class="alert alert-light border small py-2">
                            <i class="fas fa-sticky-note me-1 text-warning"></i> @item.Notes
                        </div>
                    }

                    <hr class="mt-4 mb-3 opacity-25">

                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@item.AddressId" class="btn btn-sm btn-outline-dark flex-grow-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.AddressId" class="btn btn-sm btn-outline-danger"><i class="fas fa-times"></i></a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>