@model IEnumerable<RestaurantSystem.Models.ShoppingCart>

@{
    ViewData["Title"] = "Your Cart";
}

<div class="container py-5">
    <h2 class="mb-4 text-primary"><i class="fas fa-shopping-cart"></i> Your Shopping Cart</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center p-5 shadow-sm">
            <h4 class="fw-bold">Your cart is empty! 🍔</h4>
            <p class="text-muted">Looks like you haven't added anything yet.</p>
            <a asp-controller="Home" asp-action="Menu" class="btn btn-dark mt-3 px-4 rounded-pill">
                Go to Menu <i class="fas fa-arrow-right ms-2"></i>
            </a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover shadow-sm bg-white rounded overflow-hidden">
                <thead class="table-dark">
                    <tr>
                        <th>Item</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle fw-bold">@item.MenuItem?.Name</td>
                            <td class="align-middle">@item.MenuItem?.Price EGP</td>
                            <td class="align-middle">
                                <span class="badge bg-secondary fs-6">@item.Quantity</span>
                            </td>
                            <td class="align-middle text-success fw-bold">
                                @(item.Quantity * (item.MenuItem?.Price ?? 0)) EGP
                            </td>
                            <td class="align-middle">
                                <a asp-action="Remove" asp-route-id="@item.CartId" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Remove
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-4 p-4 bg-light rounded shadow-sm border">
            <h3 class="fw-bold m-0">Total: <span class="text-primary">@ViewBag.Total EGP</span></h3>

            <a asp-controller="ShoppingCart"
               asp-action="Checkout"
               class="btn btn-success btn-lg px-5 shadow">
                Checkout <i class="fas fa-check-circle ms-2"></i>
            </a>
        </div>

        <div class="mt-3">
            <a asp-controller="Home" asp-action="Menu" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i> Continue Shopping
            </a>
        </div>
    }
</div>